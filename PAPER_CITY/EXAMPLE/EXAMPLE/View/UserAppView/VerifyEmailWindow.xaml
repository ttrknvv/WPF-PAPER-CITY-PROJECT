<Window x:Class="EXAMPLE.View.UserAppView.VerifyEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EXAMPLE.View.UserAppView"
        mc:Ignorable="d"
        Title="VerifyEmailWindow"
        Background="#FFB8CEE7"
        Height="140" 
        Width="300"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Icon="/View/UserAppView/smartphone.png">
    <Grid>
        <TextBlock Text="{DynamicResource VerifyEmail}"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="5"/>
        <TextBox x:Name="CodeText" 
                 Width="100" 
                 Height="30"
                 FontSize="18"
                 Style="{DynamicResource ForBuyBook}"
                 VerticalContentAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="20, 30, 20, 20"/>
        <Button Content="{DynamicResource Confirm}" 
                Width="90" 
                Height="24" 
                Style="{DynamicResource ButtonBuy}"
                FontSize="14"
                Margin="0, 60, 0, 0" 
                HorizontalAlignment="Center"
                Click="Button_Click"/>
    </Grid>
</Window>
